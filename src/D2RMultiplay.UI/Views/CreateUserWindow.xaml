<Window x:Class="D2RMultiplay.UI.Views.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Windows User" Height="450" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource PrimaryText}">
    <StackPanel Margin="20">
        <TextBlock x:Name="TitleText" Text="Create New Windows User" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource PrimaryText}"/>

        <!-- Username -->
        <TextBlock x:Name="LabelUser" Text="Windows Username:" Margin="0,0,0,2" Foreground="{DynamicResource PrimaryText}"/>
        <TextBox x:Name="TxtUsername" Height="25" Margin="0,0,0,10" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource InputText}"/>

        <!-- Password -->
        <TextBlock x:Name="LabelPass" Text="Password:" Margin="0,0,0,2" Foreground="{DynamicResource PrimaryText}"/>
        <PasswordBox x:Name="TxtPassword" Height="25" Margin="0,0,0,10" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource InputText}"/>
        
        <!-- BattleTag -->
        <TextBlock x:Name="LabelBattleTag" Text="BattleTag (Optional):" Margin="0,0,0,2" Foreground="{DynamicResource PrimaryText}"/>
        <TextBox x:Name="TxtBattleTag" Height="25" Margin="0,0,0,10" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource InputText}"/>

        <!-- Description/Note -->
        <TextBlock x:Name="LabelNote" Text="Description for User (Optional):" Margin="0,0,0,2" Foreground="{DynamicResource PrimaryText}"/>
        <TextBox x:Name="TxtNote" Height="25" Margin="0,0,0,20" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource InputText}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnCreate" Content="Create" Width="100" Height="30" Margin="0,0,10,0" Click="BtnCreate_Click" IsDefault="True" Background="{DynamicResource ControlBackground}" Foreground="{DynamicResource PrimaryText}"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="80" Height="30" Click="BtnCancel_Click" IsCancel="True" Background="{DynamicResource ControlBackground}" Foreground="{DynamicResource PrimaryText}"/>
        </StackPanel>
    </StackPanel>
</Window>
