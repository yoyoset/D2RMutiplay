<Window x:Class="D2RMultiplay.UI.Views.DonationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Support the Author" Height="550" Width="850"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1A1A1A" Foreground="White">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Desc -->
            <RowDefinition Height="*"/>    <!-- QR Codes -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="TxtTitle" Text="Activate 'Luck Patch'" FontSize="22" FontWeight="Bold" 
                   Foreground="#FFD700" HorizontalAlignment="Center" Margin="0,0,0,10"
                   Effect="{DynamicResource DropShadowEffect}"/>

        <TextBlock Grid.Row="1" x:Name="TxtDesc" Text="Thank you for using..." FontSize="14" Foreground="#CCCCCC" 
                   TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- QR Codes Grid -->
        <UniformGrid Grid.Row="2" Rows="1" Margin="0,10">
            <!-- Alipay -->
            <Border Background="#222" CornerRadius="8" Margin="0,0,10,0" BorderBrush="#444" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border BorderBrush="White" BorderThickness="2" Margin="10">
                        <Image Source="pack://application:,,,/D2RMultiplay.UI;component/Assets/Images/donate_alipay.png" Width="180" Height="180"/>
                    </Border>
                    <TextBlock x:Name="LblAlipay" Text="Alipay" Foreground="#00AAEE" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- WeChat -->
            <Border Background="#222" CornerRadius="8" Margin="5,0,5,0" BorderBrush="#444" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border BorderBrush="White" BorderThickness="2" Margin="10">
                        <Image Source="pack://application:,,,/D2RMultiplay.UI;component/Assets/Images/donate_wechat.png" Width="180" Height="180"/>
                    </Border>
                    <TextBlock x:Name="LblWeChat" Text="WeChat" Foreground="#09BB07" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- PayPal -->
            <Border Background="#222" CornerRadius="8" Margin="10,0,0,0" BorderBrush="#444" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border BorderBrush="White" BorderThickness="2" Margin="10">
                        <Image Source="pack://application:,,,/D2RMultiplay.UI;component/Assets/Images/donate_paypal.png" Width="180" Height="180"/>
                    </Border>
                    <TextBlock x:Name="LblPayPal" Text="PayPal" Foreground="#003087" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Footer -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock HorizontalAlignment="Center" FontSize="20">
                <Hyperlink NavigateUri="{Binding LinkPayPalUrl}" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#009cde" TextDecorations="None">
                    <TextBlock x:Name="LinkPayPal" Text="PayPal.Me/squareuncle" FontWeight="Bold"/>
                </Hyperlink>
            </TextBlock>
            <TextBlock x:Name="LinkDesc" Text="(Supports Cards &amp; Balance)" FontSize="12" Foreground="#888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
